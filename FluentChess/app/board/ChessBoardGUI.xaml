<UserControl x:Class="FluentChess.app.board.ChessBoardGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FluentChess.app.board"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <UserControl.Resources>
        <SolidColorBrush x:Key="GridLineBrush" Color="#33000000" />

        <Style x:Key="CoordTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Opacity" Value="0.9" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <!-- <Setter Property="Margin" Value="2" /> -->
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        </Style>

    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <ui:Card Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />        <!-- Board row -->
                    <RowDefinition Height="Auto" />     <!-- Bottom file labels -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />      <!-- Board column -->
                    <ColumnDefinition Width="Auto" />   <!-- Right rank labels -->
                </Grid.ColumnDefinitions>


                <UniformGrid x:Name="RanksRight"
                             Grid.Row="0" Grid.Column="1"
                             Rows="8" Columns="1" Margin="5,0,0,0" />

                <!-- Bottom file letters -->
                <UniformGrid x:Name="FilesBottom"
                             Grid.Row="1" Grid.Column="0"
                             Rows="1" Columns="8" Margin="0,5,0,0" />
                <!-- the board -->
                <UniformGrid Grid.Column="0" Grid.Row="0" Name="BoardGrid" Rows="8" Columns="8" />
                <Canvas Name="AnimCanvas" Grid.Row="0" Grid.Column="0"
                        Panel.ZIndex="10"
                        IsHitTestVisible="False" />
            </Grid>
        </ui:Card>
    </Viewbox>
</UserControl>